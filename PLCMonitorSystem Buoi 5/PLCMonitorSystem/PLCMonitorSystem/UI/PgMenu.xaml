<Page x:Class="PLCMonitorSystem.UI.PgMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PLCMonitorSystem.UI"
      mc:Ignorable="d" 
      d:DesignHeight="970" d:DesignWidth="1920"
      Background="AliceBlue"
      Title="PgMenu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="1,1,1,1" Background="Azure">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="100"></ColumnDefinition>
                <ColumnDefinition Width="100"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Label FontSize="30"
                       FontWeight="Bold"
                       VerticalContentAlignment="Center"
                       HorizontalContentAlignment="Center">Main Menu</Label>
            </Grid>
            <Grid Grid.Column="1">
                <Label FontSize="30"
                       FontWeight="Bold"
                       VerticalContentAlignment="Center"
                       HorizontalContentAlignment="Center">RUN MODE</Label>
            </Grid>
            <Button Grid.Column="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Image Grid.Row="0"
                       Source="/IMG/Login_.png"></Image>
                    <Label Grid.Row="1"
                       FontSize="20"
                       FontWeight="Bold"
                       VerticalContentAlignment="Center"
                       HorizontalContentAlignment="Center">Login</Label>
                </Grid>
            </Button>
            <Button Grid.Column="3">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Image Grid.Row="0"
                       Source="/IMG/Logout_.png"></Image>
                    <Label Grid.Row="1"
                       FontSize="20"
                       FontWeight="Bold"
                       VerticalContentAlignment="Center"
                       HorizontalContentAlignment="Center">Logout</Label>
                </Grid>
            </Button>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="15"></Setter>
                    <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                    <Setter Property="HorizontalContentAlignment" Value="Left"></Setter>
                    <Setter Property="Background" Value="LightGray"></Setter>
                    <Setter Property="FontSize" Value="40"></Setter>
                    <Setter Property="FontWeight" Value="Bold"></Setter>
                </Style>
                <Style TargetType="Label">
                    <Setter Property="Margin" Value="15"></Setter>
                    <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                    <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
                    <Setter Property="Background" Value="LightGray"></Setter>
                    <Setter Property="FontSize" Value="40"></Setter>
                    <Setter Property="FontWeight" Value="Bold"></Setter>
                </Style>

            </Grid.Resources>
            <UniformGrid Columns="2"
                         Rows="4"
                         Margin="100,100,100,100"
                         Background="AliceBlue">
                <Button>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="/IMG/Port_.png"></Image>
                        <Label Grid.Column="1">Serial Setting</Label>
                    </Grid>
                </Button>
                <Button>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="/IMG/Lan_.png"></Image>
                        <Label Grid.Column="1">Ethernet Setting</Label>
                    </Grid>
                </Button>
                <Button>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="/IMG/Setting_.png"></Image>
                        <Label Grid.Column="1">Teaching Menu</Label>
                    </Grid>
                </Button>
                <Button>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="/IMG/Manual_.png"></Image>
                        <Label Grid.Column="1">Manual Operation</Label>
                    </Grid>
                </Button>
                <Button>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="/IMG/Status_.png"></Image>
                        <Label Grid.Column="1">Status Menu</Label>
                    </Grid>
                </Button>
                <Button>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="/IMG/Save_.png"></Image>
                        <Label Grid.Column="1">Load/Save</Label>
                    </Grid>
                </Button>
                <Button>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="/IMG/User_.png"></Image>
                        <Label Grid.Column="1">User Menu</Label>
                    </Grid>
                </Button>

            </UniformGrid>
        </Grid>
    </Grid>
</Page>
