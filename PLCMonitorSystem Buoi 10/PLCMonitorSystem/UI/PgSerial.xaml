<Page x:Class="PLCMonitorSystem.UI.PgSerial"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PLCMonitorSystem.UI"
      mc:Ignorable="d" 
      d:DesignHeight="970" d:DesignWidth="1920"
      Background="AliceBlue"
      Title="PgSerial">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="15"></Setter>
                    <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                    <Setter Property="HorizontalContentAlignment" Value="Left"></Setter>
                    <Setter Property="Background" Value="LightGray"></Setter>
                    <Setter Property="FontSize" Value="40"></Setter>
                    <Setter Property="FontWeight" Value="Bold"></Setter>
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="Margin" Value="15"></Setter>
                    <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                    <Setter Property="HorizontalContentAlignment" Value="Left"></Setter>
                    <Setter Property="Background" Value="LightGray"></Setter>
                    <Setter Property="FontSize" Value="40"></Setter>
                    <Setter Property="FontWeight" Value="Bold"></Setter>
                </Style>
            </Grid.Resources>

            <ScrollViewer>
                <StackPanel>
                    <Button Name="btnOpen">Open</Button>
                    <Button Name="btnClose">Close</Button>
                    <TextBox Name="txtSend">.........</TextBox>
                    <Button Name="btnSend">Send</Button>
                    <TextBox Name="txtRecieve">..........</TextBox>
                    <Button Name="btnRecieve">Recive</Button>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="15"></Setter>
                    <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                    <Setter Property="HorizontalContentAlignment" Value="Left"></Setter>
                    <Setter Property="Background" Value="LightGray"></Setter>
                    <Setter Property="FontSize" Value="40"></Setter>
                    <Setter Property="FontWeight" Value="Bold"></Setter>
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="Margin" Value="15"></Setter>
                    <Setter Property="VerticalContentAlignment" Value="Center"></Setter>
                    <Setter Property="HorizontalContentAlignment" Value="Left"></Setter>
                    <Setter Property="Background" Value="LightGray"></Setter>
                    <Setter Property="FontSize" Value="40"></Setter>
                    <Setter Property="FontWeight" Value="Bold"></Setter>
                </Style>
            </Grid.Resources>
            <ScrollViewer>
                <StackPanel>
                    <Button Name="btnMcOpen">MC Open</Button>
                    <Button Name="btnMcClose">MC Close</Button>
                    <Button Name="btnReadWord">Read Word</Button>
                </StackPanel>
            </ScrollViewer>


        </Grid>
    </Grid>
</Page>
