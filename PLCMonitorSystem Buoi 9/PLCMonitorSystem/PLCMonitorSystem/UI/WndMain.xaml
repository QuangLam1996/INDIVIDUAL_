<Window x:Class="PLCMonitorSystem.UI.WndMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLCMonitorSystem.UI"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="WndMain" Height="1080" Width="1920"
        >
        
    <Grid Background="AliceBlue">
        <Grid.RowDefinitions >
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="6*"></ColumnDefinition>
                <ColumnDefinition Width="6*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" Background="Blue">
                <Label VerticalContentAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="30"
                       FontWeight="ExtraBold"
                       Foreground="White">STATUS</Label>
            </Grid>
            <Grid Grid.Column="1" Background="Green">
                <Label VerticalContentAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="30"
                       FontWeight="ExtraBold"
                       Foreground="White">RUNNING</Label>
            </Grid>
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Background="Aqua"
                               FontWeight="ExtraBold"
                               Margin="1,1,1,1">LOT ID
                    </Label>
                    <Label Grid.Row="1" HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Background="Aqua"
                               FontWeight="ExtraBold"
                               Margin="1,1,1,1">PRODUCT ID
                    </Label>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBox Grid.Row="0" Text="ITM"
                             VerticalContentAlignment="Center"></TextBox>
                    <TextBox Grid.Row="1"
                             VerticalContentAlignment="Center">SEMICONDUCTOR</TextBox>
                </Grid>
            </Grid>
            <Grid Grid.Column="3">
                <UniformGrid Columns="3" Rows="2" Background="#FF5E97E1">
                    <Label Style="{StaticResource Label16}" Margin="1,0,1,1">Tester</Label>
                    <Label Style="{StaticResource Label16}" Margin="1,0,1,1">MES Server</Label>
                    <Label Style="{StaticResource Label16}" Margin="1,0,1,1">2D Reader[1]</Label>

                    <Label Style="{StaticResource Label16}" Margin="1,0,1,1" Background="Green">ONLINE</Label>
                    <Label Style="{StaticResource Label16}" Margin="1,0,1,1" Background="Green">ONLINE</Label>
                    <Label Style="{StaticResource Label16}" Margin="1,0,1,1" Background="Green">ONLINE</Label>
                </UniformGrid>
            </Grid>
        </Grid>
        <Grid Margin="1,1,1,1" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
                <ColumnDefinition Width="1*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Margin="1,1,1,1" Grid.Column="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"
                       FontSize="25"
                       FontWeight="Bold">Now Jig ID</Label>
                <TextBox Grid.Column="1" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"
                         FontSize="20">ITM</TextBox>
            </Grid>
            <Grid Grid.Column="1">
                <Label Background="LightGreen" HorizontalContentAlignment="Left"
                       VerticalContentAlignment="Center"
                       FontSize="20">Supply the jig to the loader</Label>
            </Grid>
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" FontSize="25" FontWeight="Bold"
                        Name="btnMain">Main</Button>
                <Button Grid.Column="1" FontSize="25" FontWeight="Bold"
                        Name="btnMenu">Menu</Button>
                <Button Grid.Column="2" FontSize="25" FontWeight="Bold"
                        Name="btnIO">I/O</Button>
                <Button Grid.Column="3" FontSize="25" FontWeight="Bold"
                        Name="btnAlarm">Alarm</Button>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Frame x:Name="frmMain"></Frame>
          
        </Grid>
    </Grid>
</Window>
