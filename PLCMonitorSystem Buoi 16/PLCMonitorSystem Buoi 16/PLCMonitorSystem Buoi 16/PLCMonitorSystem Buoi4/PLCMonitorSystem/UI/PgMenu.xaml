<Page x:Class="PLCMonitorSystem.UI.PgMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PLCMonitorSystem.UI"
      mc:Ignorable="d" 
      d:DesignHeight="640" d:DesignWidth="1080"
      Title="PgMenu">

    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Label Content="MAIN MENU"
                   FontSize="30"
                   VerticalContentAlignment="Center"
                   HorizontalContentAlignment="Center"
                   FontWeight="Bold"
                   />
            <Label Content="RUN MODE"
                   FontSize="30"
                   Grid.Column="1"
                   VerticalContentAlignment="Center"
                   HorizontalContentAlignment="Center"
                   FontWeight="Bold"
                   />
            <Button Grid.Column="2"
                    Grid.ColumnSpan="1"
                    >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Image Grid.Row="0"
                           Source="/IMG/login.png"
                           ></Image>
                    <Label Grid.Row="1"
                           Content="Login"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"
                           FontWeight="Bold"
                           ></Label>
                </Grid>
            </Button>
            <Button Grid.Column="3"
                    Grid.ColumnSpan="1"
                    >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Image Grid.Row="0"
                           Source="/IMG/logout.png"
                           ></Image>
                    <Label Grid.Row="1"
                           Content="Logout"
                           VerticalContentAlignment="Center"
                           HorizontalContentAlignment="Center"
                           FontWeight="Bold"
                           ></Label>
                </Grid>
            </Button>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="10"/>
                    <Setter Property="Background" Value="LightGray"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="15"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
                <Style TargetType="Label">
                    <Setter Property="Margin" Value="10"/>
                    <Setter Property="Background" Value="LightGray"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </Grid.Resources>
            <UniformGrid
                Rows="2"
                Columns="2"
                Background="AliceBlue"
                Margin="100 50 90 45 "
                >
                <Button Name="btnSerial">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0"
                               Source="/IMG/serial.png"
                               />
                        <Label Grid.Column="1"
                               Content="Serial Setting"
                               />
                    </Grid>
                </Button>
                <Button >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0"
                               Source="/IMG/ethernet.png"
                               />
                        <Label Grid.Column="1"
                               Content="Ethernet Setting"
                               />
                    </Grid>
                </Button>
                <Button >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0"
                               Source="/IMG/run.png"
                               />
                        <Label Grid.Column="1"
                               Content="Run Setting"
                               />
                    </Grid>
                </Button>
                <Button >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0"
                               Source="/IMG/manual.png"
                               />
                        <Label Grid.Column="1"
                               Content="Mannual Operation"
                               />
                    </Grid>
                </Button>
            </UniformGrid>
        </Grid>
    </Grid>
</Page>
