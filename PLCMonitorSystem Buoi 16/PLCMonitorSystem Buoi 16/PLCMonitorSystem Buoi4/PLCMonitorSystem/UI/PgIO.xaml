<Page x:Class="PLCMonitorSystem.UI.PgIO"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PLCMonitorSystem.UI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PgIO">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6.5*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderBrush="#bbbbbb" BorderThickness="2">
            <Label Name="lblTitle" FontSize="28" FontWeight="Bold" Foreground="DodgerBlue"
                   VerticalContentAlignment="Center">MODULE TYPE: INPUT 32</Label>
        </Border>

        <UniformGrid Grid.Row="1" Columns="2">
            <UniformGrid.Resources>
                <Style TargetType="Label">
                    <Setter Property="BorderBrush" Value="#bbbbbb"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Padding" Value="2,0,2,0"/>
                </Style>
            </UniformGrid.Resources>
            <Grid x:Name="gridIO0015">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
            </Grid>
            <Grid x:Name="gridIO1631">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
            </Grid>
        </UniformGrid>

        <Grid Grid.Row="2">
            <Grid.Resources>
                <Style TargetType="Button" >
                    <Setter Property="Margin" Value="10,10,10,10"/>
                </Style>
                <Style TargetType="Rectangle">
                    <Setter Property="Width" Value="100"/>
                    <Setter Property="Height" Value="10"/>
                    <Setter Property="Fill" Value="Silver"/>
                    <Setter Property="StrokeThickness" Value="2"/>
                    <Setter Property="Stroke" Value="Gray"/>
                </Style>
                <Style TargetType="TextBlock">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="24"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" Name="btInput">
                <StackPanel>
                    <Rectangle Name="rectInput"/>
                    <TextBlock>Input I/O</TextBlock>
                </StackPanel>
            </Button>
            <Button Grid.Column="2" Name="btOutput">
                <StackPanel>
                    <Rectangle Name="rectOutput"/>
                    <TextBlock>Output I/O</TextBlock>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Page>
